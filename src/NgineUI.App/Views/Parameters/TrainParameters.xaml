<UserControl x:Class="NgineUI.App.Views.Parameters.TrainParameters"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NgineUI.App.Views.Parameters"
             xmlns:e="clr-namespace:NgineUI.App.Views.Network.Editors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel Margin="15 5">
        <Button DockPanel.Dock="Bottom" HorizontalAlignment="Right" Padding="15 2" Content="ОК"/>

        <Grid>
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="VerticalAlignment" Value="Center"></Setter>
                </Style>
            </Grid.Resources>

            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Label Content="Параметры обучения" FontSize="20" Grid.ColumnSpan="2" Padding="0"></Label>

            <TextBlock Text="Привязки:" Grid.Row="1"/>
            <DockPanel Grid.Row="1" Grid.Column="1">
                <Button Content="Добавить" x:Name="btnDataMappings" Padding="5 2"/>
                <TextBlock VerticalAlignment="Stretch" Padding="5 2"
                           Background="Gray" Foreground="White">
                    C:\\ngine\path.yaml
                </TextBlock>
            </DockPanel>

            <TextBlock Text="Размер пакетов (batch size):" Grid.Row="2"/>
            <e:UIntEditor Grid.Row="2" Grid.Column="1"/>

            <TextBlock Text="Количество эпох (epochs):" Grid.Row="3"/>
            <e:UIntEditor Grid.Row="3" Grid.Column="1"/>

            <TextBlock Text="Коэффициент разбиения выборки (validation split):" Grid.Row="4"/>
            <e:FloatEditor Grid.Row="4" Grid.Column="1"/>

            <TextBlock Text="? Использовать внешний файл (h5):" Grid.Row="6" Foreground="DarkRed"/>
            <DockPanel Grid.Row="6" Grid.Column="1">
                <Button Content="Добавить" Padding="5 2"/>
                <TextBlock VerticalAlignment="Stretch" Padding="5 2"
                           Background="Gray" Foreground="White">
                </TextBlock>
            </DockPanel>
        </Grid>
    </DockPanel>
</UserControl>
