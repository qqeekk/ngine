<UserControl x:Class="NgineUI.App.Views.Control.ReadOnlyTerminal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NgineUI.App.Views.Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox Name="tbxTerminal" ScrollViewer.VerticalScrollBarVisibility="Visible" TextWrapping="Wrap" 
                 FontFamily="Courier New"
                 Background="LightGray"
                 IsReadOnly="True"
                 Initialized="tbxTerminal_Initialized" />
    </Grid>
</UserControl>
