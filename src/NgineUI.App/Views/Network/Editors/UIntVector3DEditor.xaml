<UserControl x:Class="NgineUI.App.Views.Network.Editors.UIntVector3DEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NgineUI.App.Views.Network.Editors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="X:" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White"/>
        <local:UIntEditor x:Name="xEditor" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,3,0,0"/>

        <Label Grid.Row="1" Content="Y:" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White"/>
        <local:UIntEditor Grid.Row="1" x:Name="yEditor" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,3,0,0"/>

        <Label Grid.Row="2" Content="Z:" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White"/>
        <local:UIntEditor Grid.Row="2" x:Name="zEditor" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,3,0,0"/>
    </Grid>
</UserControl>
